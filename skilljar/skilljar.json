{
  "openapi": "3.0.3",
  "info": {
    "title": "Skilljar API",
    "description": "Skilljar Learning Management System",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://api.skilljar.com/v1",
      "description": "Production server"
    }
  ],
  "paths": {
    "/assets": {
      "get": {
        "tags": [
          "Assets"
        ],
        "operationId": "list_assets",
        "summary": "List assets",
        "description": "Returns a paginated list of Asset objects associated with your organization.",
        "parameters": [
          {
            "$ref": "#/components/parameters/PageParam"
          },
          {
            "$ref": "#/components/parameters/PageSizeParam"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PaginatedAssetList"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Assets"
        ],
        "operationId": "create_asset",
        "summary": "Create an asset",
        "description": "Creates an Asset object. The file will be downloaded from the remote source and re-hosted in Skilljar.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AssetCreate"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Asset created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Asset"
                }
              }
            }
          }
        }
      }
    },
    "/assets/{id}": {
      "get": {
        "tags": [
          "Assets"
        ],
        "operationId": "get_asset",
        "summary": "Get asset details",
        "description": "Retrieves details for an asset associated with your organization.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "Asset ID",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Asset"
                }
              }
            }
          }
        }
      }
    },
    "/v1/courses": {
      "get": {
        "operationId": "list_courses",
        "summary": "List courses",
        "tags": [
          "Courses"
        ],
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "schema": {
              "type": "integer",
              "description": "A page number within the paginated result set."
            }
          },
          {
            "name": "page_size",
            "in": "query",
            "schema": {
              "type": "integer",
              "description": "Number of results to return per page."
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "count": {
                      "type": "integer"
                    },
                    "next": {
                      "type": "string",
                      "nullable": true
                    },
                    "previous": {
                      "type": "string",
                      "nullable": true
                    },
                    "results": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Course"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "operationId": "create_course",
        "summary": "Create a new course",
        "tags": [
          "Courses"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CourseCreate"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Course created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Course"
                }
              }
            }
          }
        }
      }
    },
    "/v1/courses/{course_id}": {
      "get": {
        "operationId": "retrieve_course",
        "summary": "Retrieve a specific course",
        "tags": [
          "Courses"
        ],
        "parameters": [
          {
            "name": "course_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Course"
                }
              }
            }
          }
        }
      },
      "put": {
        "operationId": "update_course",
        "summary": "Update a course",
        "tags": [
          "Courses"
        ],
        "parameters": [
          {
            "name": "course_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CourseUpdate"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Course updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Course"
                }
              }
            }
          }
        }
      },
      "patch": {
        "operationId": "partial_update_course",
        "summary": "Partially update a course",
        "tags": [
          "Courses"
        ],
        "parameters": [
          {
            "name": "course_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CourseUpdate"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Course partially updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Course"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Asset": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for the asset"
          },
          "name": {
            "type": "string",
            "description": "Name of the asset"
          },
          "type": {
            "type": "string",
            "description": "Type of asset"
          },
          "embed_link_url": {
            "type": "string",
            "description": "URL for embedding the asset",
            "format": "uri"
          },
          "aspect_ratio": {
            "type": "string",
            "description": "Aspect ratio of the asset",
            "enum": [
              "16:9",
              "4:3"
            ]
          },
          "sync_completion": {
            "type": "boolean",
            "description": "Whether to sync completion status"
          }
        },
        "required": [
          "id",
          "name"
        ]
      },
      "AssetCreate": {
        "type": "object",
        "properties": {
          "content_url": {
            "type": "string",
            "description": "URL to the content source",
            "format": "uri"
          },
          "asset": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Name of the asset (OPTIONAL, default: built dynamically)"
              },
              "embed_link_url": {
                "type": "string",
                "description": "Embed link URL (OPTIONAL, but must be present if content_url is not)",
                "format": "uri"
              },
              "aspect_ratio": {
                "type": "string",
                "description": "Aspect ratio (OPTIONAL, can only be 16:9 or 4:3, default 16:9)",
                "enum": [
                  "16:9",
                  "4:3"
                ]
              },
              "sync_completion": {
                "type": "boolean",
                "description": "Sync completion (OPTIONAL, default False)"
              }
            }
          }
        },
        "required": [
          "asset"
        ]
      },
      "PaginatedAssetList": {
        "type": "object",
        "properties": {
          "count": {
            "type": "integer",
            "description": "Total number of assets"
          },
          "next": {
            "type": "string",
            "nullable": true,
            "description": "URL to the next page of results",
            "format": "uri"
          },
          "previous": {
            "type": "string",
            "nullable": true,
            "description": "URL to the previous page of results",
            "format": "uri"
          },
          "results": {
            "type": "array",
            "description": "List of assets",
            "items": {
              "$ref": "#/components/schemas/Asset"
            }
          }
        },
        "required": [
          "count",
          "results"
        ]
      },
      "CourseCreate": {
        "type": "object",
        "required": [
          "title"
        ],
        "properties": {
          "enforce_sequential_navigation": {
            "type": "boolean",
            "description": "Enforce sequential navigation through the course"
          },
          "long_description_html": {
            "type": "string",
            "description": "Long description in HTML format"
          },
          "short_description": {
            "type": "string",
            "description": "Short description of the course"
          },
          "title": {
            "type": "string",
            "description": "Title of the course"
          },
          "labels": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Labels associated with the course"
          }
        }
      },
      "CourseUpdate": {
        "type": "object",
        "properties": {
          "enforce_sequential_navigation": {
            "type": "boolean",
            "description": "Enforce sequential navigation through the course"
          },
          "long_description_html": {
            "type": "string",
            "description": "Long description in HTML format"
          },
          "short_description": {
            "type": "string",
            "description": "Short description of the course"
          },
          "title": {
            "type": "string",
            "description": "Title of the course"
          },
          "labels": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Labels associated with the course"
          }
        }
      },
      "Course": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for the course"
          },
          "enforce_sequential_navigation": {
            "type": "boolean",
            "description": "Enforce sequential navigation through the course"
          },
          "long_description_html": {
            "type": "string",
            "description": "Long description in HTML format"
          },
          "short_description": {
            "type": "string",
            "description": "Short description of the course"
          },
          "title": {
            "type": "string",
            "description": "Title of the course"
          },
          "labels": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Labels associated with the course"
          }
        }
      }
    },
    "parameters": {
      "PageParam": {
        "name": "page",
        "in": "query",
        "description": "A page number within the paginated result set.",
        "schema": {
          "type": "integer",
          "minimum": 1
        }
      },
      "PageSizeParam": {
        "name": "page_size",
        "in": "query",
        "description": "Number of results to return per page.",
        "schema": {
          "type": "integer",
          "minimum": 1,
          "maximum": 1000
        }
      }
    },
    "securitySchemes": {
      "apiKey": {
        "type": "apiKey",
        "in": "header",
        "name": "Authorization",
        "description": "API key authentication"
      }
    }
  },
  "security": [
    {
      "apiKey": []
    }
  ]
}